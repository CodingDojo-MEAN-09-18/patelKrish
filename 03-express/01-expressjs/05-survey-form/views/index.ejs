<html>
    <head>
        <title>Survey Form</title>
        <style>
            div{
                width: 400px;
            }
        </style>
    </head>
    <body>
        <div>
            <form action="/survey" method="post">
                <fieldset>
                    <legend>Survey Form</legend>
                    <table>
                        <tr>
                            <td><label for="name">Your Name: </label></td>
                            <td><input type="text" name="name" id="name"></td>
                        </tr>
                        <tr>
                            <td><label for="location">Dojo Location: </label></td>
                            <td>
                                <select name="location">
                                    <option>San Jose</option>
                                    <option>Seattle</option>
                                    <option>LA</option>
                                    <option>Dallas</option>
                                    <option>TC</option>
                                    <option>Chicago</option>
                                    <option>Tulsa</option>
                                    <option>East Bay</option>
                                </select>
                            </td>
                        </tr>
                        <tr>
                            <td><label for="language">Favorite Language: </label></td>
                            <td>
                                <select name="language">
                                    <option>Python</option>
                                    <option>Java</option>
                                    <option>C++</option>
                                    <option>HTML/CSS</option>
                                    <option>JavaScript</option>
                                    <option>C#</option>
                                    <option>Unix</option>
                                    <option>Ruby</option>
                                    <option>Other Language</option>
                                </select>
                            </td>
                        </tr>
                        <tr>
                            <td><label for="comment">Comment (optional): </label></td>
                        </tr>
                    </table>
                    <textarea name="comment" id="comment-box" cols="50" rows="10"></textarea>
                    <br>
                    <input type="submit" value="Submit">
                </fieldset>
            </form>
        </div>
    </body>
</html>